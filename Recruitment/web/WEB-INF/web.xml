<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>recruit.functions.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetInformation</servlet-name>
        <servlet-class>recruit.functions.GetInformation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateVacancy</servlet-name>
        <servlet-class>recruit.functions.CreateVacancy</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StoreApplication</servlet-name>
        <servlet-class>recruit.functions.StoreApplication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePassword</servlet-name>
        <servlet-class>recruit.functions.ChangePassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChooseHome</servlet-name>
        <servlet-class>recruit.functions.ChooseHome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginValidation</servlet-name>
        <servlet-class>recruit.functions.LoginValidation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/Controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetInformation</servlet-name>
        <url-pattern>/GetInformation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateVacancy</servlet-name>
        <url-pattern>/CreateVacancy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StoreApplication</servlet-name>
        <url-pattern>/StoreApplication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePassword</servlet-name>
        <url-pattern>/ChangePassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChooseHome</servlet-name>
        <url-pattern>/ChooseHome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginValidation</servlet-name>
        <url-pattern>/LoginValidation</url-pattern>
    </servlet-mapping>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/ErrorPage.jsp</location>
    </error-page>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>ChooseHome</welcome-file>
    </welcome-file-list>
</web-app>
